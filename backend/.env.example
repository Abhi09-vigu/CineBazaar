# Copy to .env and fill values
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=

# Auth
JWT_SECRET=
JWT_EXPIRES_IN=7d

# CORS
CLIENT_ORIGIN=http://localhost:5173

# Booking locks
LOCK_TTL_SECONDS=300

# Seed an admin user on startup (optional)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Cloudinary (optional; required if uploading posters instead of using posterUrl)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Payments
# Razorpay (recommended for India; test keys in dev)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Mock/Stripe fallback (optional; dev only)
PAYMENT_MODE=mock
STRIPE_PUBLIC_KEY=pk_test_mock
STRIPE_SECRET_KEY=sk_test_mock
